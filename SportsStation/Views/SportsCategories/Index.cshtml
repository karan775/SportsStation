@model IEnumerable<SportsStation.Models.SportsCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SportsCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SportsCategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SportsCategoryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SportsCategoryID">Details</a> |
