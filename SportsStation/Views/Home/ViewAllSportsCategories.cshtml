@model IEnumerable<SportsStation.Models.SportsCategory>
@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h1 class="display-4" style="margin-bottom:50px;">Available Sports Category</h1>
    </div>
    <div class="row" style="margin-bottom:50px;">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card w-100">
                    <center>
                        <img src="~/slide/SportsCart.png" alt="" style="width:100%">
                    </center>
                    <div class="card-body">
                        <h5 class="card-text">
                            @item.SportsCategoryName
                        </h5>
                        <a class="btn btn-primary" asp-action="ViewSportsMaterialBySportsCategory" asp-route-id="@item.SportsCategoryID">View Product</a>
                    </div>

                </div>
            </div>
        }
    </div>